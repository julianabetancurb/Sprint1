@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="styles.css"> <!-- Link to your custom CSS file -->
    <style>
        /* Custom styles for the login form */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #1D2135; /* Light gray background */
        }

        .container {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            text-align: center;
        }

        h1 {
            color: ; /* Blue header text */
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #333;
        }

        .btn-primary {
            background-color: #1D2135;
            border: none;
            padding: 10px 20px;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #1D2135; /* Darker blue on hover */
            }

        .forgot-password {
            text-decoration: underline;
            color: #1D2135;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Iniciar Sesión</h1>
        <form id="account" method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" type="password" placeholder="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <button id="login-submit" type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
            <br />
            <br />
            <p class="forgot-password">
                <a id="forgot-password" asp-page="./ForgotPassword">Olvidé mi contraseña</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">¿No tienes cuenta?</a>
            </p>
        </form>
    </div>
</body>
</html>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



